<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.qubership.atp.environments</groupId>
        <artifactId>parent-db-properties</artifactId>
        <version>1.5.96-SNAPSHOT</version>
        <relativePath>../parent/parent-db-properties/pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>env-q-classes-generation</artifactId>
    <name>env-q-classes-generation</name>
    <properties>
        <src.dir>src/main/java</src.dir>
        <src.dir.pg>${project.build.directory}/pg/java</src.dir.pg>
    </properties>
    <build>
        <!--Thru this definition we let know to IDE where from it must take generated sources.-->
        <sourceDirectory>${src.dir}</sourceDirectory>
    </build>
    <profiles>
        <profile>
            <id>db-postgresql</id>
            <activation>
                <property>
                    <name>stage</name>
                </property>
            </activation>
            <properties>
                <src.dir>${src.dir.pg}</src.dir>
            </properties>
        </profile>
        <profile>
            <id>migration-on-build-pg</id>
            <activation>
                <property>
                    <name>stage</name>
                    <value>test</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.querydsl</groupId>
                        <artifactId>querydsl-maven-plugin</artifactId>
                        <version>${querydsl.version}</version>
                        <executions>
                            <execution>
                                <phase>generate-sources</phase>
                                <id>generate-q-classes-postgresql</id>
                                <goals>
                                    <goal>export</goal>
                                </goals>
                                <configuration>
                                    <jdbcDriver>${pg.jdbc.Driver}</jdbcDriver>
                                    <jdbcUrl>${pg.jdbc.Url}</jdbcUrl>
                                    <jdbcUser>${pg.jdbc.User}</jdbcUser>
                                    <jdbcPassword>${pg.jdbc.Password}</jdbcPassword>
                                    <packageName>${querydslPackageName}</packageName>
                                    <targetFolder>${src.dir.pg}</targetFolder>
                                    <typeMappings>
                                        <typeMapping>
                                            <table>projects</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>environments</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>environments</table>
                                            <column>project_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>environments</table>
                                            <column>category_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>environments</table>
                                            <column>created_by</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>environments</table>
                                            <column>modified_by</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>environments</table>
                                            <column>source_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>environment_categories</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>link_to_system_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>external_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>environment_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>category_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>created_by</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>modified_by</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>parent_system_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>systems</table>
                                            <column>source_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>system_categories</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>connections</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>connections</table>
                                            <column>system_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>connections</table>
                                            <column>created_by</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>connections</table>
                                            <column>modified_by</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>connections</table>
                                            <column>source_template_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>connections</table>
                                            <column>source_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>users</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>user_projects</table>
                                            <column>project_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>user_projects</table>
                                            <column>user_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>user_roles</table>
                                            <column>user_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>user_roles</table>
                                            <column>role_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>roles</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>roles</table>
                                            <column>parent_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>role_grands</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>role_grands</table>
                                            <column>entity_id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>subscribers</table>
                                            <column>id</column>
                                            <type>com.querydsl.sql.types.UtilUUIDType</type>
                                        </typeMapping>
                                        <typeMapping>
                                            <table>subscriptions</table>
                                            <column>id</column>
